<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="19dp"
        android:layout_marginTop="30dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="169dp"
            android:layout_height="153dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:cardCornerRadius="14dp"
            app:cardElevation="2dp">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/recipe_iv"
                app:shapeAppearanceOverlay="@style/roundedImage14dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true" />

        </androidx.cardview.widget.CardView>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/recipe_details_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/card_view"
            android:layout_marginHorizontal="5dp"
            android:background="@drawable/recipe_details_bg">

            <TextView
                android:id="@+id/recipe_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                tools:text="Eggs Benedict"
                android:includeFontPadding="false"
                android:textColor="@color/text_tertiary"
                android:textSize="12sp"
                android:textStyle="normal"
                android:gravity="start"
                android:maxLines="1"
                android:ellipsize="end"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="3dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"/>

            <TextView
                android:id="@+id/recipe_desc"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                tools:text="Muffin with Canadian bacon"
                android:includeFontPadding="false"
                android:textColor="@color/text_tertiary"
                android:textSize="13sp"
                android:textStyle="normal"
                android:gravity="start"
                android:maxLines="2"
                android:ellipsize="end"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/recipe_name"
                android:layout_marginTop="2dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"/>

            <TextView
                android:id="@+id/item_count_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="All items avb"
                android:includeFontPadding="false"
                android:textColor="@color/red_text"
                android:textSize="8sp"
                android:textStyle="normal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/recipe_desc"
                android:layout_marginTop="3dp"
                android:layout_marginStart="15dp"/>

            <TextView
                android:id="@+id/time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/x_min"
                android:includeFontPadding="false"
                android:textColor="@color/red_text"
                android:textSize="12sp"
                android:textStyle="normal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/recipe_desc"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="15dp"/>
            
            <ImageView
                android:id="@+id/time_iv"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:src="@drawable/ic_timer"
                app:layout_constraintTop_toTopOf="@id/time_tv"
                app:layout_constraintBottom_toBottomOf="@id/time_tv"
                app:layout_constraintEnd_toStartOf="@id/time_tv"
                android:layout_marginEnd="2dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageView
            android:id="@+id/favourite_iv"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_fav"
            app:layout_constraintTop_toTopOf="@id/card_view"
            app:layout_constraintEnd_toEndOf="@id/card_view"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="7dp"
            android:elevation="3dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>