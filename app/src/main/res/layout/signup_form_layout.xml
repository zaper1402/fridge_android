<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/bg">
        
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            
            <TextView
                android:id="@+id/text_sign_up"
                android:textColor="#FD5D69"
                android:textSize="20sp"
                android:layout_marginTop="28dp"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:gravity="center"
                android:text="Sign Up"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
            <TextView
                android:id="@+id/text_full_name"
                android:textColor="@color/text_primary"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_marginTop="67dp"
                android:layout_marginStart="40dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Full name"
                app:layout_constraintTop_toBottomOf="@id/text_sign_up"
                app:layout_constraintStart_toStartOf="parent"/>
            <EditText
                android:inputType="text"
                android:hint="Syed Bazil Ali"
                android:id="@+id/edit_full_name"
                android:textColor="@color/text_primary"
                android:textColorHint="@color/text_tertiary"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginTop="11dp"
                android:layout_marginHorizontal="35dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/form_field_background"
                android:paddingVertical="12dp"
                android:paddingHorizontal="37dp"
                app:layout_constraintTop_toBottomOf="@id/text_full_name"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
            <TextView
                android:id="@+id/text_email"
                android:textColor="@color/text_primary"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_marginTop="15dp"
                android:layout_marginStart="40dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Email"
                app:layout_constraintTop_toBottomOf="@id/edit_full_name"
                app:layout_constraintStart_toStartOf="parent"/>
            <EditText
                android:inputType="text"
                android:hint="bazil@gmail.com"
                android:id="@+id/edit_email"
                android:textColor="@color/text_primary"
                android:textColorHint="@color/text_tertiary"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginTop="11dp"
                android:layout_marginHorizontal="35dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/form_field_background"
                android:paddingVertical="12dp"
                android:paddingHorizontal="38dp"
                app:layout_constraintTop_toBottomOf="@id/text_email"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
            <TextView
                android:id="@+id/text_mobile_number"
                android:textColor="@color/text_primary"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_marginTop="15dp"
                android:layout_marginStart="40dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Mobile Number"
                app:layout_constraintTop_toBottomOf="@id/edit_email"
                app:layout_constraintStart_toStartOf="parent"/>
            <EditText
                android:inputType="text"
                android:hint="+ 123 456 789"
                android:id="@+id/edit_mobile_number"
                android:textColor="@color/text_primary"
                android:textColorHint="@color/text_tertiary"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginTop="11dp"
                android:layout_marginHorizontal="35dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/form_field_background"
                android:paddingVertical="12dp"
                android:paddingHorizontal="37dp"
                app:layout_constraintTop_toBottomOf="@id/text_mobile_number"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
            <TextView
                android:id="@+id/text_dob"
                android:textColor="@color/text_primary"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_marginTop="15dp"
                android:layout_marginStart="40dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Date of birth"
                app:layout_constraintTop_toBottomOf="@id/edit_mobile_number"
                app:layout_constraintStart_toStartOf="parent"/>
            <EditText
                android:inputType="text"
                android:hint="DD / MM /YYY"
                android:id="@+id/edit_dob"
                android:textColor="@color/text_primary"
                android:textColorHint="@color/text_tertiary"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginTop="11dp"
                android:layout_marginHorizontal="35dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/form_field_background"
                android:paddingVertical="12dp"
                android:paddingHorizontal="38dp"
                app:layout_constraintTop_toBottomOf="@id/text_dob"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
            <TextView
                android:id="@+id/text_password"
                android:textColor="@color/text_primary"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_marginTop="15dp"
                android:layout_marginStart="40dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Password"
                app:layout_constraintTop_toBottomOf="@id/edit_dob"
                app:layout_constraintStart_toStartOf="parent"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/form_field_background"
                android:paddingLeft="37dp"
                android:paddingRight="20dp"
                android:layout_marginTop="11dp"
                android:layout_marginHorizontal="35dp"
                app:layout_constraintTop_toBottomOf="@id/text_password"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">
                <EditText
                    android:inputType="text"
                    android:hint="●●●●●●●●"
                    android:background="@null"
                    android:id="@+id/edit_password"
                    android:textColor="@color/text_primary"
                    android:textColorHint="@color/text_tertiary"
                    android:textSize="12sp"
                    android:layout_marginEnd="4dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingVertical="11dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/image_password_visibility"/>
                <ImageView
                    android:id="@+id/image_password_visibility"
                    android:layout_width="24dp"
                    android:layout_height="19dp"
                    android:src="@mipmap/ic_launcher"
                    android:scaleType="fitXY"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <TextView
                android:id="@+id/text_confirm_password"
                android:textColor="@color/text_primary"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_marginTop="15dp"
                android:layout_marginStart="39dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Confirm Password"
                app:layout_constraintTop_toBottomOf="@id/layout_password"
                app:layout_constraintStart_toStartOf="parent"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_confirm_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/form_field_background"
                android:paddingLeft="37dp"
                android:paddingRight="20dp"
                android:layout_marginHorizontal="35dp"
                app:layout_constraintTop_toBottomOf="@id/text_confirm_password"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">
                <EditText
                    android:inputType="text"
                    android:hint="●●●●●●●●"
                    android:background="@null"
                    android:id="@+id/edit_confirm_password"
                    android:textColor="@color/text_primary"
                    android:textColorHint="@color/text_tertiary"
                    android:textSize="12sp"
                    android:layout_marginEnd="4dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingVertical="11dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/image_confirm_password_visibility"/>
                <ImageView
                    android:id="@+id/image_confirm_password_visibility"
                    android:layout_width="24dp"
                    android:layout_height="19dp"
                    android:src="@mipmap/ic_launcher"
                    android:scaleType="fitXY"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <TextView
                android:id="@+id/text_terms"
                android:textColor="@color/text_primary"
                android:textSize="14sp"
                android:layout_marginTop="37dp"
                android:textAlignment="center"
                android:layout_marginHorizontal="80dp"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text="By continuing, you agree to \n Terms of Use and Privacy Policy."
                app:layout_constraintTop_toBottomOf="@id/layout_confirm_password"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_sign_up_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/primary_bg_30"
                android:paddingVertical="13dp"
                android:layout_marginTop="9dp"
                android:layout_marginHorizontal="116dp"
                android:clickable="true"
                android:focusable="true"
                app:layout_constraintTop_toBottomOf="@id/text_terms"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">
                <TextView
                    android:id="@+id/text_sign_up_button"
                    android:textColor="#FFFCF8"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Sign up"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <TextView
                android:id="@+id/text_log_in"
                android:textSize="13sp"
                android:textColor="@color/text_primary"
                android:layout_marginTop="9dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:gravity="center"
                app:layout_constraintHorizontal_chainStyle="packed"
                android:text="Already have an account?"
                app:layout_constraintTop_toBottomOf="@id/layout_sign_up_button"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/text_log_in_link"/>
            <TextView
                android:id="@+id/text_log_in_link"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/primary"
                android:textSize="13sp"
                android:textStyle="bold"
                android:text=" Log In"
                app:layout_constraintTop_toTopOf="@id/text_log_in"
                app:layout_constraintBottom_toBottomOf="@id/text_log_in"
                app:layout_constraintStart_toEndOf="@id/text_log_in"
                app:layout_constraintEnd_toEndOf="parent"/>
            <TextView
                android:id="@+id/text_or"
                android:textColor="@color/text_primary"
                android:textColorHint="@color/text_tertiary"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginTop="13dp"
                android:layout_marginBottom="6dp"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:gravity="center"
                android:text="or"
                app:layout_constraintTop_toBottomOf="@id/text_log_in"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_google_sign_up"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/secondary_button_30_bg"
                android:paddingHorizontal="36dp"
                android:layout_marginTop="9dp"
                android:layout_marginHorizontal="32dp"
                app:layout_constraintTop_toBottomOf="@id/text_or"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">
                <ImageView
                    android:id="@+id/image_google_icon"
                    android:layout_width="22dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="32dp"
                    android:src="@drawable/ic_google_white"
                    android:scaleType="fitXY"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>
                <TextView
                    android:inputType="text"
                    android:text="Sign up with Google"
                    android:id="@+id/edit_google_sign_up"
                    android:textColor="#FFFCF8"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingVertical="22dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/image_google_icon"
                    app:layout_constraintEnd_toEndOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>